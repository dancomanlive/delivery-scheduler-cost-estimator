<div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-lg shadow">
  <h1 class="text-2xl font-bold mb-6">Schedule New Delivery</h1>

  <%= form_with(model: @delivery, local: true, class: "space-y-4") do |f| %>
    <% if @delivery.errors.any? %>
      <div class="bg-red-50 p-4 rounded-md">
        <h2 class="text-red-700 text-sm font-medium">
          <%= pluralize(@delivery.errors.count, "error") %> prohibited this delivery from being saved:
        </h2>
        <ul class="mt-2 text-red-600 text-sm">
          <% @delivery.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :pickup_address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :pickup_address, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :delivery_address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :delivery_address, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :weight, "Weight (kg)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :weight, step: '0.1', required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :distance, "Distance (km)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :distance, step: '0.1', required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :scheduled_time, class: "block text-sm font-medium text-gray-700" %>
      <%= f.datetime_local_field :scheduled_time, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :driver_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :driver_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div class="pt-4">
      <%= f.submit "Schedule Delivery", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>